generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model CalendarOwner {
  id         Int      @id @default(autoincrement())
  name       String
  email      String   @unique
  createdAt  DateTime @default(now())
  availability Availability[]
  appointments Appointments[]
}

model Availability {
  id        Int      @id @default(autoincrement())
  ownerId   Int
  dayOfWeek String
  startTime String
  endTime   String
  createdAt DateTime @default(now())
  owner     CalendarOwner @relation(fields: [ownerId], references: [id])
}

model Appointments {
  id          Int      @id @default(autoincrement())
  ownerId     Int
  inviteeName String
  inviteeEmail String
  date        DateTime
  timeSlot    String
  createdAt   DateTime @default(now())
  owner       CalendarOwner @relation(fields: [ownerId], references: [id])
}